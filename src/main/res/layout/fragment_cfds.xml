<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="30dp"
    tools:context=".ui.cfd.activity.CfdFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/kline_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_bottom_line_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/kline_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:padding="2dp"
                android:src="@mipmap/icon_cfd_kline_on"
                android:visibility="gone" />

            <TextView
                android:id="@+id/kline_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/double_cfd"
                android:textColor="@color/v2_btn"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/transaction_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/transaction_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:padding="2dp"
                android:src="@mipmap/icon_cfd_transaction_off"
                android:visibility="gone" />

            <TextView
                android:id="@+id/transaction_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/free_cfd"
                android:textColor="@color/text"
                android:textSize="19sp" />
        </LinearLayout>
    </LinearLayout>

    <com.dtl.gemini.widget.NoScrollViewPager
        android:id="@+id/assets_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp" />

</LinearLayout>

