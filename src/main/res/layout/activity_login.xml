<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dtl.gemini.ui.other.activity.LoginActivity">

    <ImageView
        android:id="@+id/g_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:padding="13dp"
        android:src="@mipmap/icon_back_black"
        android:visibility="gone" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:src="@mipmap/icon_home_title"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="30sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/item_coin_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/phone_rl"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/phone_area_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="ï¼‹ 86"
                android:textColor="@color/text2"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/phone_area_tv"
                android:padding="3dp"
                android:src="@mipmap/icon_select" />
        </RelativeLayout>

        <EditText
            android:id="@+id/login_phone_et"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#fff"
            android:fontFamily="monospace"
            android:gravity="center_vertical"
            android:hint="@string/phone"
            android:inputType="number"
            android:maxLength="13"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="@color/text2"
            android:textColorHint="@color/text1"
            android:textCursorDrawable="@drawable/text_cursor_drawable_btnbg"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pwd_login_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/item_coin_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/pwd"
            android:textColor="@color/text2"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/login_password_et"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#fff"
            android:fontFamily="monospace"
            android:gravity="center_vertical"
            android:hint="@string/pwd"
            android:inputType="textPassword"
            android:maxLength="16"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="@color/text2"
            android:textColorHint="@color/text1"
            android:textCursorDrawable="@drawable/text_cursor_drawable_btnbg"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/see_pwd_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:src="@mipmap/icon_see_off"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/code_login_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/item_coin_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/code"
            android:textColor="@color/text2"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/login_code_et"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#fff"
            android:fontFamily="monospace"
            android:gravity="center_vertical"
            android:hint="@string/code"
            android:inputType="number"
            android:maxLength="6"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="@color/text2"
            android:textColorHint="@color/text1"
            android:textCursorDrawable="@drawable/text_cursor_drawable_btnbg"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/login_getcode_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/send"
            android:textColor="@color/v2_btn"
            android:textSize="14sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/login_findpwd_tv"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/forget_pwd"
            android:textColor="@color/v2_btn"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/login_pwd_or_code"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/code_login"
            android:textColor="@color/v2_btn"
            android:textSize="14sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_btn_bg"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="17sp" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/login_reg_bg"
        android:gravity="center"
        android:text="@string/new_user_register"
        android:textAllCaps="false"
        android:textColor="@color/v2_btn"
        android:textSize="17sp" />

</LinearLayout>
