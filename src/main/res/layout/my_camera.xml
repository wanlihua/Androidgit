<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--<attr name="inner_width" format="dimension"/>&lt;!&ndash; 控制扫描框的宽度 &ndash;&gt;-->
    <!--<attr name="inner_height" format="dimension"/>&lt;!&ndash; 控制扫描框的高度 &ndash;&gt;-->
    <!--<attr name="inner_margintop" format="dimension" />&lt;!&ndash; 控制扫描框距离顶部的距离 &ndash;&gt;-->
    <!--<attr name="inner_corner_color" format="color" />&lt;!&ndash; 控制扫描框四角的颜色 &ndash;&gt;-->
    <!--<attr name="inner_corner_length" format="dimension" />&lt;!&ndash; 控制扫描框四角的长度 &ndash;&gt;-->
    <!--<attr name="inner_corner_width" format="dimension" />&lt;!&ndash; 控制扫描框四角的宽度 &ndash;&gt;-->
    <!--<attr name="inner_scan_bitmap" format="reference" />&lt;!&ndash; 控制扫描图 &ndash;&gt;-->
    <!--<attr name="inner_scan_speed" format="integer" />&lt;!&ndash; 控制扫描速度 &ndash;&gt;-->
    <!--<attr name="inner_scan_iscircle" format="boolean" />&lt;!&ndash; 控制小圆点是否展示 &ndash;&gt;-->
    <com.uuzuche.lib_zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:inner_corner_color="@color/v2_btn"
        app:inner_corner_length="30dp"
        app:inner_corner_width="1dp"
        app:inner_height="200dp"
        app:inner_scan_iscircle="true"
        app:inner_scan_speed="10"
        app:inner_width="200dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal|bottom"
        android:text="@string/capture_hint"
        android:textColor="@color/white"
        android:textSize="12sp" />

</FrameLayout>